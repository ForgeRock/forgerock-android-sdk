<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".callback.ReCaptchaCallbackFragment" android:id="@+id/frameLayout">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/error"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/reCaptcha"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <ImageView
                android:src="@android:drawable/ic_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/errorIcon" android:layout_weight="1"
                android:contentDescription="@string/content"/>
        <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/Red"
                android:layout_height="match_parent" android:id="@+id/verificationError" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="@string/verify_recaptcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/reCaptcha" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>