<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Logo -->
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_logo" android:id="@+id/imageView2"
            android:contentDescription="@string/content" android:layout_margin="8dp"/>

    <!-- Callbacks -->
    <fragment
            android:id="@+id/loginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="org.forgerock.android.auth.ui.LoginFragment"/>

</LinearLayout>