<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.Theme.AuthApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.AuthApp" parent="Platform.Theme.AuthApp" />

    <style name="Theme.SplashScreenAndroid12" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreenAndroid12.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SplashScreenAndroid12.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SplashScreenAndroid12.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.SplashScreenAndroid12</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>




</resources>